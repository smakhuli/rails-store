= form_for @profile, :html => { :class => 'form-horizontal' } do |f|
  .control-group.required
    = f.label :first_name, :class => 'control-label'
    .controls
      = f.text_field :first_name, :class => 'text_field'
  .control-group.required
    = f.label :last_name, :class => 'control-label'
    .controls
      = f.text_field :last_name, :class => 'text_field'
  .control-group.required
    = f.label :gender, :class => 'control-label'
    .controls
      = f.text_field :gender, :class => 'text_field'
  .control-group.required
    = f.label :birthday, :class => 'control-label'
    .controls
      = f.date_select(:birthday, :start_year => 1900)
  .control-group.required
    = f.label :marital_status, :class => 'control-label'
    .controls
      = f.text_field :marital_status, :class => 'text_field'
  .control-group.required
    = f.label :phone, :class => 'control-label'
    .controls
      = f.text_field :phone, :class => 'text_field'
  .control-group.required
    = f.label :address, :class => 'control-label'
    .controls
      = f.text_field :address, :class => 'text_field'
  .control-group.required
    = f.label :city, :class => 'control-label'
    .controls
      = f.text_field :city, :class => 'text_field'
  .control-group
    = f.label :state, :class => 'control-label'
    .controls
      = f.text_field :state, :class => 'text_field'
  .control-group.required
    = f.label :country, :class => 'control-label'
    .controls
      = f.text_field :country, :class => 'text_field'
  .control-group.required
    = f.label :zip, :class => 'control-label'
    .controls
      = f.text_field :zip, :class => 'text_field'
  .control-group.required
    = f.label :nationality, :class => 'control-label'
    .controls
      = f.text_field :nationality, :class => 'text_field'
  .control-group
    = f.label :photo, :class => 'control-label'
    .controls
      = f.file_field :photo, :class => 'file_field'
  .control-group
    = f.label :passport, :class => 'control-label'
    .controls
      = f.file_field :passport, :class => 'file_field'
  .control-group
    = f.label :bio, :class => 'control-label'
    .controls
      = f.text_area :bio, :class => 'text_area'
  .control-group
    = f.label :medical_conditions, :class => 'control-label'
    .controls
      = f.text_area :medical_conditions, :class => 'text_area'
  .control-group
    = f.label :medications, :class => 'control-label'
    .controls
      = f.text_area :medications, :class => 'text_area'
  .control-group
    = f.label :allergies, :class => 'control-label'
    .controls
      = f.text_area :allergies, :class => 'text_area'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), profiles_path, :class => 'btn'