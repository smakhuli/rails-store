%p
  %strong= model_class.human_attribute_name(:medications) + ':'
  %br
  = @profile.medications
%p
  %strong= model_class.human_attribute_name(:allergies) + ':'
  %br
  = @profile.allergies

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), profiles_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_profile_path(@profile), :class => 'btn'
/  = link_to t('.destroy', :default => t("helpers.links.destroy")), profile_path(@profile), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'