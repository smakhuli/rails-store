- model_class = @profile.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @profile.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @profile.last_name
%p
  %strong= model_class.human_attribute_name(:photo) + ':'
  %br
  = image_tag @profile.photo_url(:thumb).to_s
%p
  %strong= model_class.human_attribute_name(:passport) + ':'
  %br
  = image_tag @profile.passport_url(:thumb).to_s
%p
  %strong= model_class.human_attribute_name(:gender) + ':'
  %br
  = @profile.gender
%p
  %strong= model_class.human_attribute_name(:birthday) + ':'
  %br
  = @profile.birthday
%p
  %strong= model_class.human_attribute_name(:marital_status) + ':'
  %br
  = @profile.marital_status
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @profile.phone
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @profile.address
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @profile.city
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @profile.state
%p
  %strong= model_class.human_attribute_name(:country) + ':'
  %br
  = @profile.country
%p
  %strong= model_class.human_attribute_name(:zip) + ':'
  %br
  = @profile.zip
%p
  %strong= model_class.human_attribute_name(:nationality) + ':'
  %br
  = @profile.nationality
%p
  %strong= model_class.human_attribute_name(:bio) + ':'
  %br
  = @profile.bio
%p
  %strong= model_class.human_attribute_name(:medical_conditions) + ':'
